#!/usr/bin/env python

import numpy
from distutils.core import setup
from distutils.extension import Extension

include_dirs = filter(lambda p: len(p), [
    "${CMAKE_BINARY_DIR}/src",
    "${CMAKE_SOURCE_DIR}/src",
    numpy.get_include(),
] + "${CERES_INCLUDE_DIRS}".split(";"))
library_dirs = ["${CMAKE_BINARY_DIR}/lib"]
libraries = ["blas", "lapack", "glog", "gflags", "cfitsio", "kpsf"]
sources = [
    "${CMAKE_CURRENT_SOURCE_DIR}/kpsf/_kpsf.cc",
]
extra_objects = filter(lambda f: f[-2:] == ".a",
                       "${CERES_ALL_LIBRARIES}".split(";"))
extra_compile_args = []
extra_link_args = []

ext = Extension("kpsf._kpsf",
                sources=sources,
                library_dirs=library_dirs,
                libraries=libraries,
                runtime_library_dirs=library_dirs,
                include_dirs=include_dirs,
                extra_objects=extra_objects)

setup(
    name="kpsf",
    version="${KPSF_VERSION}",
    author="Daniel Foreman-Mackey",
    author_email="danfm@nyu.edu",
    url="https://github.com/dfm/kpsf",
    packages=["kpsf"],
    ext_modules=[ext],
    description="",
    long_description=open("${CMAKE_CURRENT_SOURCE_DIR}/README.rst").read(),
    package_dir={"": "${CMAKE_CURRENT_SOURCE_DIR}"},
    classifiers=[
        # "Development Status :: 5 - Production/Stable",
        "Intended Audience :: Developers",
        "Intended Audience :: Science/Research",
        "License :: OSI Approved :: MIT License",
        "Operating System :: OS Independent",
        "Programming Language :: Python",
    ],
)
